<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomsheetvegid"
    app:cardElevation="3dp"
    android:background="@color/white">




    <TextView
        android:id="@+id/idfname"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/idfimg"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:padding="4dp"
        android:singleLine="true"
        android:text="Fruit Name"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/idfprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idfname"
        android:layout_margin="3dp"
        android:padding="4dp"
        android:singleLine="true"
        android:text="Vgeetable Price"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/idfcusprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idfprice"
        android:layout_margin="3dp"
        android:padding="4dp"
        android:singleLine="true"
        android:text="Vgeetable customer Price"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/editvegbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="170dp"
        android:layout_marginBottom="124dp"

        android:background="@color/black"
        android:padding="4dp"
        android:singleLine="true"
        android:text="Update"
        android:textColor="@color/black"
        app:backgroundTint="@color/AppYellow" />

    <ImageView
        android:id="@+id/idfimg"
        android:layout_width="match_parent"
        android:layout_height="398dp" />

</RelativeLayout>

